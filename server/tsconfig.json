{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    // "paths": {
    //   "typings": ["./../shared"]
    // }
  },
  "exclude": ["node_modules", "dist"],
  "typedocOptions": {
    "mode": "modules",
    "out": "docs"
  }
}
